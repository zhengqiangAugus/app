<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
	    android:id="@+id/center"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" 
	    android:contentDescription="@string/app_name"
	    android:src="@drawable/home_bg"
	    android:scaleType="matrix"
	    />

	<com.zq.app.view.FixGridLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >

	    <TextView
	        android:id="@+id/open_snow"
	        android:layout_width="0dp"
	        android:layout_height="60dp"
	        android:background="#ffdd00" 
	        app:layout_widthPercent="90%w"
	        app:layout_marginPercent="5%w"
	        android:text="打开桌面雪花"
	        android:gravity="center"
	        android:textSize="16sp"
	        />
	    
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="60dp"
	        android:background="#ff00dd" 
	        app:layout_widthPercent="50%w"
	        />
	    
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="60dp"
	        android:background="#ddff00" 
	        app:layout_widthPercent="50%w"
	        />
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="60dp"
	        android:background="#dd00ff" 
	        app:layout_widthPercent="50%w"
	        />
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="80dp"
	        android:background="#00ddff" 
	        app:layout_widthPercent="50%w"
	        />
	</com.zq.app.view.FixGridLayout>
	<!-- <com.zq.app.view.SnowImageView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" 
		android:contentDescription="@string/app_name"
		android:background="#00000000"
		android:clickable="false"
	    /> -->
</RelativeLayout>

